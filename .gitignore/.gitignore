bool searchWord(hangman hangman, char letter)
{
	int counter = 0;

	while (counter <= hangman.word.size())
	{
		if (hangman.word[counter] == letter)
		{
			return true;
		}
		else
		{
			return false;
		}
		counter++;
	}
}

