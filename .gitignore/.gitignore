string randomWord()
{
	int selector = rand() % 5;
	cout << selector << endl;

	if (selector == 1)
		return "chocolate";
	else if (selector == 2)
		return "discussion";
	else if (selector == 3)
		return "caffeine";
	else if (selector == 4)
		return "tutorial";
	else if (selector == 0)
		return "implementation";
	else
		return "error";
}

